<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommunityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/custom_rectangle">
        <!-- Search Bar -->
        <EditText
            android:id="@+id/et_author_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search for your Community"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:padding="10dp"
            android:layout_weight="9"
            android:background="@android:drawable/editbox_background" />

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/gradient_background"
            android:text="Search" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Communities"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>
<!--        android:text="@string/stay_updated_on_topics_that_matter_to_you_find_communities_to_follow_below"-->


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/community_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:text="Explore More"
        android:textSize="20dp" />

</LinearLayout>
